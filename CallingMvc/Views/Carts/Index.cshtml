@model IEnumerable<CallingMvc.Models.Carts>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Product.Category.Categury_Name)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Product.Name)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Product.Price)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Product.Category.Categury_Name)
    </td>
    <td>
        @using (Html.BeginForm("Delete", "Carts", new { id = item.ProductId }))
        {
            <div class="form-group">
                <div class="col-md-offset-4 col-md-10">
                    <input type="submit" value="Delete" class="btn btn-danger"
                           onclick="return confirm('Are sure to delate Pruduct Record with ID = @item.ProductId ');" />
                </div>
            </div>
        }
    </td>
</tr>
}

</table>
